generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model TxJob {
  id          String   @id @default(uuid())
  fromChainId Int
  toChainId   Int
  payload     String
  status      String   @default("pending")
  result      String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
